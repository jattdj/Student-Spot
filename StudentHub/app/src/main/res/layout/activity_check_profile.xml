<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.djsaiyesh.team.studenthub.CheckProfile">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter ID No."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/search"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/search"
        android:onClick="fetch"
        android:text="Search" />

    <TextView
        android:id="@+id/refname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/search"
        android:layout_below="@+id/button7"
        android:layout_marginTop="47dp"
        android:text="Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/refmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/refname"
        android:layout_below="@+id/refname"
        android:layout_marginTop="23dp"
        android:text="Mobile "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/refaboutyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/refmobile"
        android:layout_below="@+id/refmobile"
        android:layout_marginTop="39dp"
        android:text="About You"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/refname"
        android:layout_centerHorizontal="true"
        android:text="DisplayName"
        android:id="@+id/email" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_alignTop="@+id/refmobile"
        android:text="DisplayMobile" />

    <TextView
        android:id="@+id/aboutyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/refaboutyou"
        android:layout_below="@+id/refaboutyou"
        android:layout_marginTop="24dp"
        android:text="DisplayAboutYou" />
</RelativeLayout>
