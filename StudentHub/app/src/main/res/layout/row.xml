<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/shinywhite" />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:gravity="center"
        android:text="Heading"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView8" />

    <TextView
        android:id="@+id/email"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="ID No"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_toEndOf="@+id/name" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="50dp"
        android:onClick="increaselike"
        android:layout_height="30dp"
        android:src="@drawable/emptyheart"
        android:layout_below="@+id/data"
        android:layout_alignStart="@+id/imageView8" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Count"
        android:textStyle="bold"
        android:textColor="#B20000"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/feeling"
        android:layout_alignBottom="@+id/feeling"
        android:layout_toEndOf="@+id/heart" />

    <TextView
        android:id="@+id/feeling"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Feeling"
        android:textSize="15dp"
        android:textColor="#10D2E7"
        android:textStyle="bold"
        android:layout_below="@+id/data"
        android:layout_toEndOf="@+id/likes" />

    <TextView
        android:id="@+id/id"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="ID"
        android:layout_below="@+id/data"
        android:layout_toEndOf="@+id/feeling" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toStartOf="@+id/likes" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="20sp"
        android:gravity="center_vertical"
        android:text="Name"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView6" />

    <TextView
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/data"
        android:layout_toEndOf="@+id/imageView6"
        android:text="Date" />

</RelativeLayout>
