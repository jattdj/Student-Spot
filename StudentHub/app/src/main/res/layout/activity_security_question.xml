<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/shinywhite"
    tools:context="com.djsaiyesh.team.studenthub.SecurityQuestion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Question"
        android:id="@+id/textView3"
        android:textStyle="italic|bold"
        android:textSize="25dp"
        android:textColor="#212643"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/setquestion"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="Submit"
        android:id="@+id/submit"
        android:background="@layout/ovalshape"
        android:onClick="submit"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
               android:layout_marginTop="54dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view"
            android:layout_below="@+id/setquestion"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer"
                android:hint="@string/answer"


                />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>




</RelativeLayout>
